<h1>Districts</h1>

<%= form_tag '/districts' do %>

  Address: <%= text_field_tag :address %>
  <%= submit_tag "Submit" %>

<% end %>

 <table>
    <thead>
    <tr>
      <th>Name</th>
      <th>Abbr</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @districts.each do |district| %>
      <tr>
        <td><%= link_to "#{district.name}", "district/#{district.name}" %></td>
        <td><%= district.abbr %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
