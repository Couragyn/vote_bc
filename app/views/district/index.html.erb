<div id="buffer"></div>
<div class="container body-container district-index-container">
  <div class="top-margin"></div>
  <h1>District Index</h1>

  <div class="one-full column">
    <% (1..@years.count).each do |i| %>
      <%= link_to year = @years.find(i).year, "#anchor-#{year}", class: 'button' %>
    <% end %>
    <% (1..@years.count).each do |i| %>
      <div class="district-anchor" id="anchor-<%= year = @years.find(i).year %>">
      </div>
        <%= render 'district_list', election_districts: @districts.where(:election_id => i).order('districts.name'), year: year %>
    <% end %>
  </div>
</div>