<div id="map"></div>

<script>
  var map;
  function initMap() {
    map = new google.maps.Map(document.getElementById('map'), {
      zoom: 9,
      center: {lat: <%= @district.centroid_lat %>, lng: <%= @district.centroid_lng %>}
    });
    // Define the LatLng coordinates for the polygon.
    var coords = [
      <% boundary = DistrictPoint.where district_id: @district.id %>
      <% boundary.each do |point| %>
        {lat: <%= point.lat %>, lng: <%= point.lng %>},
      <% end %>
    ];
    // Construct the polygon.
    var ridingBoundary = new google.maps.Polygon({
      paths: coords,
      strokeColor: '#FF0000',
      strokeOpacity: 0.8,
      strokeWeight: 3,
      fillColor: '#FF0000',
      fillOpacity: 0.35
    });
    ridingBoundary.setMap(map);
  }
</script>

<script async defer
  src="https://maps.googleapis.com/maps/api/js?key=<%=ENV['GOOGLE_MAPS_JS_API_KEY']%>&callback=initMap">
</script>

<h1><%= @district.name %></h1>

<% @district.elections.each do |e| %>
  <%= e.year %><br>
  <% ceds = CandidateElectionDistrict.where(district_id: @district.id, election_id: e.id).order(votes_total: :desc) %>
  <table>
    <thead>
      <th>Candidate</th>
      <th>Party</th>
      <th>Total Votes</th>
      <th>Percent</th>
    </thead>
    <% ceds.each do |ced| %>
      <tr>
        <% candidate = Candidate.find(ced.candidate_id) %>
        <td><%= candidate.name %></td>
        <td>(<%= candidate.party.abbr %>)</td>
        <td><%= ced.votes_total %></td>
        <td><%= ced.votes_percent %>%</td>
      </tr>
    <% end %>
  </table>
  <br>
<% end %>