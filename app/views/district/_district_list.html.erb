<table>
  <thead>
    <tr>
      <th>District Name</th>
      <th>Abbreviation</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% districts.each do |district| %>
      <tr>
        <% if (defined?(@election.year)).nil? %>
          <td><%= link_to district.name, "/district/#{district.slug}" %></td>
        <% else %>
          <td><%= link_to district.name, "/district/#{district.slug}/#{@election.year}" %></td>
        <% end %>
        <td><%= district.abbr %></td>
      </tr>
    <% end %>
  </tbody>
</table>