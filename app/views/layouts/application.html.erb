<!DOCTYPE html>
<html>
  <head>
    <% if @page_title %>
      <title>Vote-BC | <%= @page_title %></title>
    <% else %>
      <title>Vote-BC</title>
    <% end %>
    <%= csrf_meta_tags %>

    <!-- COMMON TAGS -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Search Engine -->
    <meta name="description" content="Data visualisation for BC Election History">
    <meta name="image" content="<%= request.host %><%= asset_path 'vote-bc-wide-cover.jpg' %>">
    <!-- Schema.org for Google -->
    <meta itemprop="name" content="Vote BC">
    <meta itemprop="description" content="Data visualisation for BC Election History">
    <meta itemprop="image" content="<%= request.host %><%= asset_path 'vote-bc-wide-cover.jpg' %>">
    <!-- Twitter -->
    <meta name="twitter:card" content="summary">
    <meta name="twitter:title" content="Vote BC">
    <meta name="twitter:description" content="Data visualisation for BC Election History">
    <meta name="twitter:image:src" content="<%= request.host %><%= asset_path 'vote-bc-wide-cover.jpg' %>">
    <!-- Open Graph general (Facebook, Pinterest & Google+) -->
    <meta name="og:title" content="Vote BC">
    <meta name="og:description" content="Data visualisation for BC Election History">
    <meta name="og:image" content="<%= request.host %><%= asset_path 'vote-bc-wide-cover.jpg' %>">
    <meta name="og:url" content="www.Vote-BC.ca">
    <meta name="og:site_name" content="Vote BC">
    <meta name="og:locale" content="en_US">
    <meta name="og:type" content="website">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Work+Sans:700" rel="stylesheet">
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <% if Rails.env.production? %>
      <script type="text/javascript">
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');
        ga('create', 'UA-98305669-1', 'auto');
      </script>
    <% end %>
  </head>

  <body>
    <%= render 'layouts/top_nav' %>
    <div class="content">
      <%= yield %>
    </div>
    <%= render 'layouts/footer' %>
  <script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-590931e84018f1e1"></script>
  </body>
</html>
