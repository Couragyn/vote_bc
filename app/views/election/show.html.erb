<% if request.original_fullpath == "/election/#{Election.current_election_year}" || request.original_fullpath == "/" %>
  <%= render 'layouts/parallax' %>
<% end %>
<div class="container body-container">
  <div id="election-anchor"></div>
  <div class="buffer"></div>
  <h1><%= @election.year %> Election</h1>
  <h5>Major Party Leaders</h5>
  <% @leaders.each do |pl| %>
    <%= pl.name %>
    <%= pl.party.abbr %>
    <% if @premier && pl.id == @premier.id %>
      <%= "(ELECTED!)" %>
    <% end %>
    <br/>
  <% end %>
  <div class="row">
    <%= render 'election_party_table', party_stats: @party_stats %>
  </div>
  <div class="one-half column">
    <%= render :partial => '/district/district_list', :locals => {districts: @districts} %>
  </div>
  <div class="one-half column">

  </div>
</div>